extends layout

block content
  h1= title

  if(toShow == null)
    h2 No instance to update
  else
    - let pensid = toShow._id
    - let pens_type = toShow.pens_type
    - let pensquantity = toShow.quantity
    - let penscost = toShow.cost
    - let actionid = "/resource/pens/" + pensid
    script let actionid = "#{actionid}"
    div.row(class='mb-2')
    div.mr-1 ID is 
      span(style="color:red")  #{pensid}
    form(id='pensForm', action= actionid, method="PUT")
      div.form-group
      div(class="row g-3 align-items-center")
        div(class="col-1")
          label.pensAttr(for='pens_type',class="col-form-label") pens type
        div(class="col-auto")
          input#pens_type(type='text', name='pens_type',class="form-control", value=pens_type)
      div.form-group
      div(class="row g-3 align-items-center")
        div(class="col-1")
          label.pensAttr(for='quantity',class="col-form-label") pens quantity
        div(class="col-auto")
          input#quantity(type='number', name='quantity',class="form-control", value=pensquantity)
      div.form-group
      div(class="row g-3 align-items-center")
        div(class="col-1")
          label.pensAttr(for='cost',class="col-form-label") pens cost
        div(class="col-auto")
          input#cost(type='number', name='cost',class="form-control", value=penscost)
      input(class="btn btn-success m-2" type="submit")
        //- button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
      button(class="btn btn-secondary m-2" onclick="cancel()") Cancel
        
  script.
    document.forms['pensForm'].addEventListener('submit', (event) => {
    event.preventDefault();
    // TODO do something here to show user that form is being submitted
    fetch(event.target.action, {
    method: 'PUT',
    body: new URLSearchParams(new FormData(event.target)) // event.target is the form
    }).then((resp) => {
    return resp.json(); // or resp.text() or whatever the server sends
    }).then((body) => {
    alert("Save succeded")
    // TODO handle body
    }).catch((error) => {
    // TODO handle error
    alert("Save failed " + error )
    });
    });