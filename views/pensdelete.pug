extends layout

block content
  h1= title

  if(toShow == null)
    h2 No instance to delete
  else
    - let pensid = toShow._id
    - let pens_name = toShow.pens_name
    - let penstype = toShow.type
    - let penscost = toShow.cost
    - let actionid = "/resource/pens/" + pensid
    script let actionid = "#{actionid}"
    div
    div.row
    div(class='pensAttr mr-3') pens ID is: 
      span(style="color:red") #{pensid}
    div.row
    div(class='pensAttr mr-3') pens name is: 
      span(style="color:red") #{pens_name}
    div.row
    div(class='pensAttr mr-3') pens type is: 
      span(style="color:red") #{penstype}
    div.row
    div(class='pensAttr mr-3') pens Cost is: 
      span(style="color:red") #{penscost}
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel

  script.
    function cancel() {
    // Go back to the home page for the pens collection
    window.location.href='/pens'
    }
    function deleteOnid() {
    console.log("starting delete")
    // delete first
    fetch(actionid, {
    method: 'DELETE' // Don't need a body for the delete
    }).then((resp) => {
    return resp.json(); // or resp.text() or whatever the server sends
    }).then((body) => {
    alert("Delete succeded")
    window.location.href='/pens'
    // TODO handle body
    }).catch((error) => {
    // TODO handle error
    alert("Delete failed " + error )
    });
    }
